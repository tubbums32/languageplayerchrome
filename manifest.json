{
  "name": "Language Player Chrome Extension",
  "version": "1.0.0",
  "description": "Open the current Youtube video in LanguagePlayer.io",
  "manifest_version": 2,
  "icons": {
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },

  "browser_action": {
    "default_title": "Open Language Player",
    "default_icon": {
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"   
  }
  },
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}